<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:gravity="right"
              android:orientation="vertical">


    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:text="关闭"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/reqStateLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#b2f4c0"
                android:padding="5dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/reqHeaders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#82e671"
                android:padding="5dp"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/reqBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#5dec6e"
                android:padding="5dp"
                android:textColor="#000"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"

                android:background="#f00"/>

            <TextView
                android:id="@+id/respStateLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#f5eeb5"
                android:padding="5dp"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/respHeaders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fcef86"
                android:padding="5dp"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/respBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#f7e54f"
                android:padding="5dp"
                android:textColor="#000"
                />

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>